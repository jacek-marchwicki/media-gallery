<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#80ffffff</item>
    </style>

    <style name="AppTheme.WhiteBlack">
        <item name="photoGalleryBottomContainerBackgroundColor">@android:color/white</item>
        <item name="photoGalleryBottomCancelTextViewColor">@android:color/black</item>
        <item name="photoGalleryBottomSendTextViewColor">@android:color/black</item>
    </style>

    <style name="AppTheme.BlackWhite">
        <item name="photoGalleryBottomContainerBackgroundColor">@android:color/transparent</item>
        <item name="photoGalleryBottomCancelTextViewColor">@android:color/white</item>
        <item name="photoGalleryBottomSendTextViewColor">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
        <item name="theme">@style/AppTheme.Toolbar</item>
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleAppearance</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
