<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appunite.photogallery">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/com_appunite_gallery_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.appunite.buckets.GalleryActivity"
            android:theme="@style/AppTheme.GalleryActivity" />
        <activity
            android:name="com.appunite.bucket.GalleryMediaBucketActivity"
            android:theme="@style/AppTheme.WhiteBlack.GalleryImagesBucketActivity" />
        <activity
            android:name="com.appunite.singleView.GalleryMediaFullscreenActivity"
            android:theme="@style/AppTheme.BlackWhite.GalleryImagesFullscreenActivity" />

    </application>

</manifest>