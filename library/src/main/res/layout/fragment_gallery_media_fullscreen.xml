<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/gallery_media_fullscreen_pager"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="match_parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/gallery_media_fullscreen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/gallery_media_fullscreen_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="6dp"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:transitionGroup="true"
        tools:targetApi="lollipop">

        <Button
            android:id="@+id/gallery_media_fullscreen_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/com_appunite_gallery_gallery_bucket_cancel" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gallery_media_fullscreen_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/com_appunite_gallery_gallery_bucket_send_disabled" />

    </LinearLayout>

</FrameLayout>